<form id="kurepaysubmit" name="kurepaysubmit" action="{{ action }}" method="POST">
    <input type="hidden" name="email" value="{{ billemail }}"/>
    <input type="hidden" name="public_key" value="{{ payment_kurepay_public_key }}"/>
    <input type="hidden" name="amount" value="{{ orderamount }}"/>
    <input type="hidden" name="reference" value="{{ orderid }}"/>
    <input type="hidden" name="fullname" value="{{ deliveryname }}"/>
    <input type="hidden" name="phoneNumber" value="{{ billphone }}"/>
</form>
<div class="d-inline-block pt-2 pd-2 w-100">
    <div class="float-right">
        <button type="button" id="button-confirm" class="btn btn-primary">{{ button_confirm }}</button>
    </div>
</div>


<script type="text/javascript"><!--
$('#button-confirm').bind('click', function() {
    $('#kurepaysubmit').submit();
});
//--></script>